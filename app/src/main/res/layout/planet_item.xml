<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/planet_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/mercury"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/view_planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Earth"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/planet_image"
        app:layout_constraintTop_toTopOf="@id/planet_image" />

    <TextView
        android:id="@+id/view_planet_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#737373"
        android:fontFamily="sans-serif-condensed-light"
        tools:text="The most beautiful planet of its galaxy!"
        app:layout_constraintStart_toStartOf="@id/view_planet_name"
        app:layout_constraintTop_toBottomOf="@id/view_planet_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
